<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/myths_bg" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:id="@+id/myths_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top10"
                android:background="@drawable/myths_cancle"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/line_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top55"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/margin_right20"
                android:layout_marginRight="@dimen/margin_right"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/myths_login_tip"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_light"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/margin_right"
                android:layout_marginRight="@dimen/margin_right20"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top30"
            android:layout_below="@+id/line_lay">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/margin_right"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/fastlogin_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/myths_fastlogin"/>
                <TextView
                    android:id="@+id/fastlogin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myths_fastlogin"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/margin_right"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/fblogin_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/myths_fblogin"/>
                <TextView
                    android:id="@+id/fblogin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myths_facebooklogin"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top30"
            android:layout_marginLeft="@dimen/margin_left25"
            android:layout_below="@+id/login_lay">
            <TextView
                android:id="@+id/policy_gou"
                android:layout_width="@dimen/margin_log_gou"
                android:layout_height="@dimen/margin_log_gou"
                android:background="@drawable/myths_policy_gou"/>
            <TextView
                android:id="@+id/policy_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myths_policy_tips"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/policy_con"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myths_policy_con"
                android:textColor="@android:color/holo_blue_light"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>